{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "cloudflare-ai",
  "title": "Cloudflare AI",
  "description": "Interact with Cloudflare AI directly in your raycast window",
  "icon": "extension-icon.png",
  "author": "dharminnagar",
  "contributors": ["code-parth"],
  "platforms": [
    "macOS",
    "Windows"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "query-clouflare-ai",
      "title": "Query Cloudflare AI",
      "description": "Ask questions to Cloudflare AI models",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "accountId",
      "type": "textfield",
      "required": true,
      "title": "Account ID",
      "description": "Your Cloudflare Account ID",
      "placeholder": "Enter your Cloudflare Account ID"
    },
    {
      "name": "apiToken",
      "type": "password",
      "required": true,
      "title": "API Token",
      "description": "Your Cloudflare API Token with Workers AI permissions",
      "placeholder": "Enter your API Token"
    },
    {
      "name": "defaultModel",
      "type": "dropdown",
      "required": false,
      "title": "Default Model",
      "description": "Default AI model to use",
      "default": "@cf/meta/llama-3-8b-instruct",
      "data": [
        {
          "title": "Llama 3 8B Instruct",
          "value": "@cf/meta/llama-3-8b-instruct"
        },
        {
          "title": "Llama 3.1 8B Instruct FP8",
          "value": "@cf/meta/llama-3.1-8b-instruct-fp8"
        },
        {
          "title": "Mistral 7B Instruct",
          "value": "@cf/mistral/mistral-7b-instruct-v0.1"
        },
        {
          "title": "GPT OSS 120B",
          "value": "@cf/openai/gpt-oss-120b"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.104.1",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}